<div class="jumbotron marqeta-main">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="title col-md-2">
        <h1>Congratulations!!!</h1>
        <h2>You've just created your first user ...</h2>
      </div>

      <div id="user side col-md-4">
        <div class="user-img">
          <%= image_tag 'user-beard', size: "200x300" %>
        </div>
        
        <div class="user-details">
          <p>Name: <%= session[:user][:first_name] %></p>
          <p>Account: <%= session[:card_product]['name'] %></p>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="action-call">Now let's make a card</h1>
    <p>for <%= session[:user][:first_name] %> so they can make purchases...</p>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-5">
    <%= form_for(@card) do |f| %>
      <%= f.submit "Create Card", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

