<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create a Transaction</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@transaction) do |f| %>
      <%= f.label :amount %>
      <%= f.text_field :amount %>

      <%= f.submit "Create Transaction", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>