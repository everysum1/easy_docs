<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Congratulations, you've created a Card ...</h2>
    <p>Name: <%= session[:user][:first_name] %></p>
    <p>Card Number (PAN): <%= session[:card]['pan'] %></p>
    <p>Expiration: <%= session[:card]['expiration'] %></p>
    <p>CVV: <%= session[:card]['cvv_number'] %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create a Transaction</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@transaction) do |f| %>
      <%= f.label :amount %>
      <%= f.text_field :amount %>

      <%= f.submit "Create Transaction", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
